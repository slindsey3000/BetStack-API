<% content_for :title, "Forgot Password - BetStack API" %>
<% content_for :meta_description, "Reset your BetStack API account password." %>
<% content_for :canonical_url, "https://api.betstack.dev/forgot-password" %>

<section style="padding: 3rem 0;">
  <div class="container-narrow">
    <h1 style="font-size: 2rem; margin-bottom: 0.5rem; text-align: center;">Forgot <span class="text-gradient">Password</span></h1>
    <p style="text-align: center; margin-bottom: 2rem;">Enter your email and we'll send you a link to reset your password.</p>
    
    <% if @message_success %>
      <div class="alert alert-success"><%= @message_success %></div>
    <% end %>
    
    <% if @message_error %>
      <div class="alert alert-error"><%= @message_error %></div>
    <% end %>
    
    <div class="card-static" style="max-width: 500px; margin: 0 auto;">
      <%= form_tag(send_password_reset_path, method: :post) do %>
        <div class="form-group">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" id="email" name="email" class="form-input" placeholder="you@example.com" required autofocus>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width: 100%;">
          Send Reset Link
        </button>
      <% end %>
      
      <div style="text-align: center; margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid var(--border);">
        <a href="<%= account_path %>" style="color: var(--primary-light); font-size: 0.9rem;">‚Üê Back to Sign In</a>
      </div>
    </div>
  </div>
</section>

