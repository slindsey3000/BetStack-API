<% content_for :title, "Reset Password - BetStack API" %>
<% content_for :meta_description, "Set a new password for your BetStack API account." %>
<% content_for :canonical_url, "https://api.betstack.dev/reset-password" %>

<section style="padding: 3rem 0;">
  <div class="container-narrow">
    <h1 style="font-size: 2rem; margin-bottom: 0.5rem; text-align: center;">Reset <span class="text-gradient">Password</span></h1>
    <p style="text-align: center; margin-bottom: 2rem;">Enter your new password below.</p>
    
    <% if @message_error %>
      <div class="alert alert-error"><%= @message_error %></div>
    <% end %>
    
    <div class="card-static" style="max-width: 500px; margin: 0 auto;">
      <%= form_tag(process_password_reset_path, method: :post) do %>
        <%= hidden_field_tag :token, @token %>
        
        <div class="form-group">
          <label for="password" class="form-label">New Password</label>
          <input type="password" id="password" name="password" class="form-input" placeholder="At least 6 characters" required minlength="6">
        </div>
        
        <div class="form-group">
          <label for="password_confirmation" class="form-label">Confirm New Password</label>
          <input type="password" id="password_confirmation" name="password_confirmation" class="form-input" placeholder="Re-enter your new password" required>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width: 100%;">
          Reset Password
        </button>
      <% end %>
      
      <div style="text-align: center; margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid var(--border);">
        <a href="<%= account_path %>" style="color: var(--primary-light); font-size: 0.9rem;">‚Üê Back to Sign In</a>
      </div>
    </div>
  </div>
</section>

